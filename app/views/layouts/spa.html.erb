<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Template • TodoMVC</title>
<%= stylesheet_link_tag "base" %>

<!--[if IE]>
<script src="../../../assets/ie.js"></script>
<![endif]-->
</head>
<body>
  
    <div class="menu">
      <h1>Menu</h1>
      <ul>
        <li><input type="button"  id="show_all_products" value="Zobacz wyszystkie produkty" /></li>
      </ul>
    </div>

    <div id="header">
        <h1>Sklep Komputerowy <br /><span style="font-size:0.5em;"> U nas najtaniej! </span></h1>
    </div>

    

    <div class="content">
  
      <table id="products_table"   border=1 style="display:none">
          <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Kategoria</th>
            <th>Szczegóły</th>

          </tr>
          <tbody id="products">
          
          </tbody>
          

      </table>

      <div id="product">
        
      </div>
    </div>
  
	
  <footer id="info">
    <p>Created by Krzysztof Krol</p>
  </footer>

<!-- skrypty   ********************************  -->
  <script type="x-handlebars-template" id="products_template">
            <tr>
              <td>{{name}}</td>
              <td>{{description}}</td>
              <td>{{price}}</td>
              <td>{{category.name}}</td>
              <td><input type="button" class="product_show" id="{{id}}" value="Pokaż szczegóły" /></td>
            </tr>
  </script>

  <script type="x-handlebars-template" id="product_template">
            <ul>
              <li>{{name}}</li>
              <li>{{description}}</li>
              <li>{{price}}</li>
              <li>{{category.name}}</li>
            </ul>
  </script>
<%= javascript_include_tag "application" %>      
</body>
</html>
