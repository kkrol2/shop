
		<% if @products.size != 0 %>

			  <table border=1>
	  			<tr>
	    			<th><%= sort_link(@q, :name, "Nazwa produktu") %></th>
	    			<th>Opis</th>
	    			<th><%= sort_link(@q, :price, "Cena") %></th>
	    			<th>Kategoria</th>
	    			<th>Szczegóły</th>
	  			</tr>

				<% @products.each do |product| %>
	  			<tr>
	    			<td><%= product.name %></td>
	    			<td><%= product.description %></td>
	    			<td><%= product.price %></td>
	          		<td><%= link_to product.category.name, '/categories/'+product.category.name %></td>
	    			<td><%= link_to 'Show', product_path(product)  %></td>
	  			</tr>
				<% end %>
			</table>
			<%= paginate @products, :outer_window => 3 %>

		<% else %>
			<%=  'Niestety nie posiadamy takiego produktu w ofercie' %>

		<% end %>
